{
	"root": true,
	"env": {
		"es6": true,
		"browser": true,
		"commonjs": true
	},
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"jsdoc/no-undefined-types": "off",
		"no-implicit-globals": "off",
		"max-len": "off",
		"compat/compat": "warn"
	}
}
