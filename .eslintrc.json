{
	"root": true,
	"extends": [
		"wikimedia/server"
	],
	"rules": {
		"node/no-unsupported-features/node-builtins": [
			"error",
			{
				"version": ">=14",
				"ignores": []
			}
		]
	},
	"overrides": [
		{
			"files": "**/**/*.vue",
			"extends": "wikimedia/vue-es6",
			"rules": {
				"es/no-block-scoped-variables": "off",
				"es/no-object-assign": "off"
			}
		}
	]
}
