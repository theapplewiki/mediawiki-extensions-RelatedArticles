		"@wdio/local-runner": "7.16.13",
		"@wdio/mocha-framework": "7.16.13",
		"eslint-config-wikimedia": "0.20.0",
		"grunt-banana-checker": "0.9.0",
		"stylelint-config-wikimedia": "0.11.1",
		"wdio-mediawiki": "2.0.0",
		"webdriverio": "7.16.13"
